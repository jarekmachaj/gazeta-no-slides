  {
    "manifest_version": 3,
    "name": "Gazeta No slides",
    "description": "One click. No more slides.",
    "version": "3.0",
    "options_page": "options.html",
    "permissions": [ "tabs", "http://*/*" ],
    "web_accessible_resources": ["ajax-loader.gif"],   
    "content_scripts": [
      {
        "matches": ["http://deser.pl/*", "http://www.deser.pl/*", 
          "http://plotek.pl/*", "http://www.plotek.pl/*", 
          "http://technologie.gazeta.pl/*", "http://www.technologie.gazeta.pl/*",
          "http://moto.pl/*", "http://www.moto.pl/*"],
        "js": ["jquery.js", "noslides.js"],
        "css": ["style.css"]
      }
    ]
}
