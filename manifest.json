  {
    "manifest_version": 2,
    "name": "Gazeta No slides",
    "description": "No more slides on Gazeta.pl pages. All slides on single page with just one click.",
    "version": "1.0.3",
    "options_page": "options.html",
    "permissions": [ "tabs", "http://*/*", "storage" ],
    "web_accessible_resources": ["resources/ajax-loader.gif", "scripts/jquery.min.map"],
    "icons": {  "16": "resources/icon16.png",
                "48": "resources/icon48.png",
                "128": "resources/icon128.png" }, 
    "content_scripts": [
      {
        "matches": ["http://deser.pl/*", "http://www.deser.pl/*", 
          "http://plotek.pl/*", "http://www.plotek.pl/*", 
          "http://technologie.gazeta.pl/*", "http://www.technologie.gazeta.pl/*",
          "http://moto.pl/*", "http://www.moto.pl/*",
          "http://wyborcza.pl/*", "http://www.wyborcza.pl/*",
          "http://wiadomosci.gazeta.pl/*", "http://www.wiadomosci.gazeta.pl/*",
          "http://avanti24.pl/*", "http://www.avanti24.pl/*",
          "http://bryla.pl/*", "http://www.bryla.pl/*",
          "http://www.ciacha.net/*", "http://ciacha.net/*",
          "http://czterykaty.pl/*", "http://www.czterykaty.pl/*",
          "http://domiwnetrze.pl/*", "http://www.domiwnetrze.pl/*",
          "http://domosfera.pl/*", "http://www.domosfera.pl/*",
          "http://www.edziecko.pl/*", "http://edziecko.pl/*",
          "http://e-ogrody.pl/*", "http://www.e-ogrody.pl/*",
          "http://polygamia.pl/*", "http://www.polygamia.pl/*",
          "http://namonciaku.pl/*", "http://www.namonciaku.pl/*",
          "http://sport.pl/*", "http://www.sport.pl/*",
          "http://www.swiatmotocykli.pl/*", "http://swiatmotocykli.pl/*",
          "http://www.tokfm.pl/*", "http://tokfm.pl/*",
          "http://tuba.pl/*", "http://www.tuba.pl/*",
          "http://ugotuj.to/*", "http://www.ugotuj.to/*",
          "http://wyborcza.biz/*", "http://www.wyborcza.biz/*",
          "http://wysokieobcasy.pl/*", "http://www.wysokieobcasy.pl/*",
          "http://zczuba.pl/*", "http://www.zczuba.pl/*",
          "http://*.gazeta.pl/*", "http://www.gazeta.pl/*",
          "http://lula.pl/*", "http://www.lula.pl/*"],
        "js": ["scripts/jquery.js", "noslides.js"],
        "css": ["styles/style.css"]
      }
    ]
}
